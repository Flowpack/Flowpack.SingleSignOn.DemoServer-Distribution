{
    "name": "amadeus/somea-sso-demoserver",
    "description" : "Demo distribution for the SSO Server",
    "repositories": [
        {
            "type": "git",
            "url": "ssh://review.networkteam.com/flow3/projects/somea/packages/TYPO3.Flow.git"
        }
    ],
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/flow": "dev-master"
    },
    "require-dev": {
        "typo3/kickstart": "dev-master",
        "typo3/buildessentials": "dev-master",
        "mikey179/vfsstream": "1.1.*"
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall"
    }
}